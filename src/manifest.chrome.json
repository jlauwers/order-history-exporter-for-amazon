{\n  \"manifest_version\": 2,\n  \"name\": \"Order History Exporter for Amazon\",\n  \"version\": \"1.0\",\n  \"description\": \"Export your order history from Amazon.\",\n  \"permissions\": [\n    \"storage\",\n    \"cookies\",\n    \"<all_urls>\"\n  ],\n  \"host_permissions\": [\n    \"*://*.amazon.com/*\",\n    \"*://*.amazon.com.be/*\"\n  ],\n  \"content_scripts\": [\n    {\n      \"matches\": [\n        \"*://*.amazon.com/gp/your-account/order-history*,\n        \"*://*.amazon.com.be/gp/your-account/order-history*,\n        \"*://*.amazon.com.be/your-orders/*\"\n      ],\n      \"js\": [\n        \"content.js\"\n      ]\n    }\n  ]\n}